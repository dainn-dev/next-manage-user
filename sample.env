# ========================================
# VEHICLE MANAGEMENT SYSTEM - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env.local and update the values as needed

# ========================================
# FRONTEND (Next.js) ENVIRONMENT VARIABLES
# ========================================

# API Configuration (Single source of truth)
# This single variable configures all API endpoints and WebSocket connections
NEXT_PUBLIC_API_URL=http://localhost:8080

# Application Configuration
NEXT_PUBLIC_APP_NAME=Vehicle Management System
NEXT_PUBLIC_APP_VERSION=1.0.0

# ========================================
# BACKEND (Spring Boot) ENVIRONMENT VARIABLES
# ========================================

# Server Configuration
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/vehicle_management
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=password
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# JPA/Hibernate Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true
SPRING_JPA_OPEN_IN_VIEW=false

# File Upload Configuration
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=50MB
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=50MB
SPRING_SERVLET_MULTIPART_ENABLED=true
SPRING_SERVLET_MULTIPART_FILE_SIZE_THRESHOLD=2KB
SPRING_SERVLET_MULTIPART_LOCATION=/app/temp
SPRING_SERVLET_MULTIPART_RESOLVE_LAZILY=false

# Security Configuration
SPRING_SECURITY_USER_NAME=admin
SPRING_SECURITY_USER_PASSWORD=admin

# JWT Configuration
JWT_SECRET=mySecretKeyForJWTTokenGenerationThatIsAtLeast256BitsLongForHS256Algorithm
JWT_EXPIRATION=86400

# Flyway Database Migration
SPRING_FLYWAY_ENABLED=true
SPRING_FLYWAY_LOCATIONS=classpath:db/migration
SPRING_FLYWAY_BASELINE_ON_MIGRATE=true

# Logging Configuration
LOGGING_LEVEL_COM_VEHICLEMANAGEMENT=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=DEBUG
LOGGING_LEVEL_ORG_HIBERNATE_SQL=DEBUG
LOGGING_LEVEL_ORG_HIBERNATE_TYPE_DESCRIPTOR_SQL_BASICBINDER=TRACE

# Actuator Configuration
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when-authorized

# SpringDoc/Swagger Configuration
SPRINGDOC_API_DOCS_PATH=/api-docs
SPRINGDOC_SWAGGER_UI_PATH=/swagger-ui.html

# ========================================
# DOCKER ENVIRONMENT VARIABLES
# ========================================

# Docker Database Configuration (for containerized deployment)
DOCKER_DATABASE_URL=jdbc:postgresql://postgres:5432/vehicle_management
DOCKER_DATABASE_USERNAME=postgres
DOCKER_DATABASE_PASSWORD=password

# Docker Network Configuration
DOCKER_BACKEND_PORT=8080
DOCKER_FRONTEND_PORT=3000
DOCKER_DATABASE_PORT=5432

# ========================================
# DEVELOPMENT ENVIRONMENT VARIABLES
# ========================================

# Development Database (if different from production)
DEV_DATABASE_URL=jdbc:postgresql://localhost:5432/vehicle_management_dev
DEV_DATABASE_USERNAME=postgres
DEV_DATABASE_PASSWORD=password

# Development API URLs
DEV_API_URL=http://localhost:8080

# ========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ========================================

# Production Database
PROD_DATABASE_URL=jdbc:postgresql://your-prod-db-host:5432/vehicle_management
PROD_DATABASE_USERNAME=your_prod_username
PROD_DATABASE_PASSWORD=your_secure_prod_password

# Production API URLs
PROD_API_URL=https://your-api-domain.com

# Production Security
PROD_JWT_SECRET=your_very_secure_jwt_secret_key_here_at_least_256_bits_long
PROD_JWT_EXPIRATION=3600

# ========================================
# LICENSE PLATE MONITOR CONFIGURATION
# ========================================

# License Plate Monitor API Configuration
LPM_API_BASE_URL=http://localhost:8080
LPM_API_ENDPOINT=/api/vehicles/check-vehicle
LPM_API_TIMEOUT=10

# License Plate Monitor Detection Configuration
LPM_COOLDOWN=2
LPM_CACHE_DURATION=600
LPM_MAX_CAMERAS=10
LPM_MIN_DETECTION_DURATION=1.0

# License Plate Monitor TTS Configuration
LPM_TTS_ENABLED=true
LPM_TTS_USE_GTTS=true
LPM_TTS_RATE=150
LPM_TTS_VOLUME=0.8
LPM_TTS_LANGUAGE=vi

# ========================================
# OPTIONAL CONFIGURATION
# ========================================

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Redis Configuration (if using Redis for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Storage Configuration
FILE_UPLOAD_PATH=/uploads
FILE_MAX_SIZE=50MB

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=30
RATE_LIMIT_WINDOW_MINUTES=1

# ========================================
# NOTES
# ========================================
# 1. Copy this file to .env.local for local development
# 2. For production, create .env.production with secure values
# 3. Never commit actual .env files to version control
# 4. Update database credentials for your environment
# 5. Use strong, unique passwords for production
# 6. Consider using environment-specific configuration files
