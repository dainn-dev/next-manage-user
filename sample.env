# ========================================
# VEHICLE MANAGEMENT SYSTEM - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env.local and update the values as needed

# ========================================
# FRONTEND (Next.js) ENVIRONMENT VARIABLES
# ========================================

# API Configuration (Single source of truth)
# This single variable configures all API endpoints and WebSocket connections
NEXT_PUBLIC_API_URL=http://localhost:8080

# Application Configuration
NEXT_PUBLIC_APP_NAME=Vehicle Management System
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Comprehensive vehicle management system with license plate monitoring

# Environment Configuration
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# Build Configuration
NEXT_PUBLIC_BUILD_TIME=
NEXT_PUBLIC_GIT_COMMIT=

# Feature Flags
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true
NEXT_PUBLIC_ENABLE_IMAGE_UPLOAD=true
NEXT_PUBLIC_ENABLE_BULK_OPERATIONS=true
NEXT_PUBLIC_ENABLE_EXPORT_FUNCTIONALITY=true

# UI Configuration
NEXT_PUBLIC_THEME=light
NEXT_PUBLIC_LANGUAGE=vi
NEXT_PUBLIC_TIMEZONE=Asia/Ho_Chi_Minh

# Pagination Configuration
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=50MB
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
NEXT_PUBLIC_UPLOAD_PATH=/uploads

# Cache Configuration
NEXT_PUBLIC_CACHE_DURATION=300000
NEXT_PUBLIC_ENABLE_CACHE=true

# Debug Configuration
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info
NEXT_PUBLIC_ENABLE_CONSOLE_LOGS=true

# Performance Configuration
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# Security Configuration
NEXT_PUBLIC_ENABLE_CSRF_PROTECTION=true
NEXT_PUBLIC_SESSION_TIMEOUT=3600000

# Development Tools
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true
NEXT_PUBLIC_ENABLE_HOT_RELOAD=true
NEXT_PUBLIC_ENABLE_ERROR_OVERLAY=true

# ========================================
# NOTES
# ========================================
# 1. Copy this file to .env.local for local development
# 2. For production, create .env.production with secure values
# 3. Never commit actual .env files to version control
# 4. Update values according to your environment
# 5. Use strong, unique values for production
# 6. All variables starting with NEXT_PUBLIC_ are exposed to the browser
